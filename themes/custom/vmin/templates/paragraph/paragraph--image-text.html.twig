{%
  set classes = [
    'para-t-' ~ paragraph.bundle|clean_class,
    view_mode ? 'para-v-' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'para-unpub',
    paragraph.field_p_img_text_layout.value not in ['left_o', 'right_o'] ? 'wr',
  ]
%}
{{ attach_library('vmin/paragraph.image_text') }}
<div{{ attributes.addClass(classes).setAttribute('data-l', paragraph.field_p_img_text_layout.value) }}>
  {{ content.field_p_img }}
  <div class="para-content">{{ content|without('field_p_img') }}</div>
</div>
